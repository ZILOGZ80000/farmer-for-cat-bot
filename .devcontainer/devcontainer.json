{
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04", // Любой образ на базе Ubuntu/Debian
  "features": {
    "ghcr.io/devcontainers/features/java:1": {
      "version": "17" // Если вы пишете тесты на Java
    },
    "ghcr.io/devcontainers/features/sshd:1": {
        "version": "latest"}
  },
  "postCreateCommand": [
    "sudo apt-get update",
    "sudo apt-get install -y firefox xvfb", // Установка браузера и Xvfb
    "wget -q https://github.com/mozilla/geckodriver/releases/latest/download/geckodriver-linux64.tar.gz", // Загрузка geckodriver
    "tar -xzf geckodriver-linux64.tar.gz",
    "chmod +x geckodriver",
    "sudo mv geckodriver /usr/local/bin/"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python", // Для Python-проектов
        "vscjava.vscode-java-pack" // Для Java-проектов
      ]
    }
  }
}